// .vscode/settings.json
{
  "files.associations": {
    "*.py": "python",
    "system_error": "cpp",
    "atomic": "cpp",
    "condition_variable": "cpp"
  },

  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",

  "cmake.generator": "Ninja",
  "cmake.sourceDirectory": "${workspaceFolder}/producer",
  "cmake.buildDirectory": "${workspaceFolder}/producer/build",
  "cmake.configureSettings": {
  "Python_EXECUTABLE": "${config:python.defaultInterpreterPath}"
},
"cmake.configureArgs": [
  "-DCMAKE_BUILD_TYPE=Release"
],
}